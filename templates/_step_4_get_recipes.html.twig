{% extends 'base.html.twig' %}

{% block title %}Leftover to recipe{% endblock %}

{% block body %}
    <div class="row my-2">
        <div class="col">
            <a 
                href={{ path('get_camera') }} 
                class="h5 text-info"
                style="text-decoration: none;"
                >
                <i class="fas fa-arrow-circle-left text-info"></i>
                Return to camera
            </a>
        </div>
    </div>

    <div class="d-flex flex-column">
        <div class="row">
            {% for recipe in recipes %}
                <div class="col-6">
                    <div class="card shadow-sm my-3 bg-white border-dark d-block">
                        <div class="card-header bg-white border-0">
                            <div class="row">
                                <div class="col">
                                    {{ recipe.title }}
                                </div>
                            </div>
                        </div>

                        <div class="card-body bg-transparent border-0 pt-0">
                            <div class="row">
                                <div class="col">
                                    Recipe picture 1
                                </div>
                            </div>

                            <h5>Ingredients:</h5>

                            <div class="row">
                                <div class="col">
                                    <ul>
                                        {% for ingredient in recipe.ingredients %}
                                            <li>{{ ingredient }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        

                            <h5>Instructions:</h5>

                            <div class="row">
                                <div class="col">
                                    <ul>
                                        {% for instruction in recipe.instructions %}
                                            <li>{{ instruction }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}