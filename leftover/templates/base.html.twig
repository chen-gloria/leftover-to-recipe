<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Leftover to recipe{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        {% endblock %}
    </head>

    <body>
        {% block head_navbar %}
            {{ include('_include/head_navbar.html.twig') }}
        {% endblock %}

        {% block banner %}{% endblock %}

        {% block flash_messages %}
            <div class="row text-center">
                <div class="col px-0">
                    {% for label, messages in app.flashes() %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} flash-msg">
                                {{ label is same as 'success' ? '<i class="fas fa-check-circle"></i> ' }}{{ message|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            {{ include('_include/footer.html.twig') }}
        {% endblock %}

        {% block body_javascript %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
